{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "strict_min_version": "54.0"
    }
  },

  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/hnz101/close-tabs-to-the-left-button",
  "version": "0.4.3",

  "browser_action": {
    "browser_style": true,
    "default_title": "__MSG_browserAction__",
    "default_area": "tabstrip",
	"default_icon": "icons/icon_left_dark.svg",
	"theme_icons": [{
		"light": "icons/icon_left_light.svg",
		"dark": "icons/icon_left_dark.svg",
		"size": 16
	}]
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "contextMenus"
  ],
  
  "default_locale": "en"
}
